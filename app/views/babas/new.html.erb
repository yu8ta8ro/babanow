<%= form_for [@baba] do |f| %>
  <%= f.text_area :title, placeholder: 'タイトル', style: 'width: 100%;height: 300px;' %>
  <%= f.text_area :concept, placeholder: '説明', style: 'width: 100%;height: 300px;' %>
  <div class="field">
  <%= image_tag @baba.image.url if @baba.image? %>
  <%= f.label :image %><br>
  <%= f.file_field :image %>
  <%= f.hidden_field :image_cache %>
  </div>
  <%= f.submit %>
<% end %>